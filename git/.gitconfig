[user]
    name = Carlos Cardoso
    email = cadu@oscardoso.com.br

[core]
    editor = vim
    # autocrlf should be input on linux/unix, true on windows
    autocrlf = input
    safecrlf = true
    whitespace = fix,space-before-tab,tab-in-indent,trailing-space
    excludesfile = ~/.gitignore_global

[apply]
    whitespace = fix

[alias]
    a  = add .
    aa = add -A
    br = branch -va
    ci = commit
    co = checkout
    df = diff -C
    dt = difftool -C -y
    h = log --all --graph --decorate --oneline --simplify-by-decoration
    l = log --all --graph --decorate --oneline -10
    st = status -uall
    su = submodule update --init
    tags = tag -l
    unstage = reset HEAD
    who = shortlog -s --

[branch "master"]
    remote = origin
    merge = refs/heads/master

[push]
    default = simple

[color]
    ui = auto
    interactive = auto

[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green

[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold

[color "status"]
    added = bold white
    changed = bold yellow
    untracked = bold cyan

[merge]
    log = true
    tool = vimdiff

[mergetool]
    keepBackup = false
    prompt = false

[rerere]
    enabled = 1
